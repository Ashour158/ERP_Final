# Complete ERP System - Environment Variables
# Copy this file to .env and update with your actual values

# Flask Configuration
FLASK_ENV=production
FLASK_APP=wsgi.py

# Security Keys (CHANGE THESE IN PRODUCTION!)
SECRET_KEY=your-super-secret-key-change-this-in-production-make-it-long-and-random
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production-also-long-and-random

# Database Configuration
# For Digital Ocean Managed Database:
DATABASE_URL=postgresql://username:password@host:port/database_name

# For local development:
DEV_DATABASE_URL=sqlite:///erp_development.db

# For testing:
# TEST_DATABASE_URL=sqlite:///:memory:

# Initial Setup Configuration
DEFAULT_COMPANY_NAME=Your Company Name
DEFAULT_COMPANY_CODE=YOURCO
DEFAULT_COMPANY_EMAIL=admin@yourcompany.com
DEFAULT_COMPANY_PHONE=+1-555-0123
DEFAULT_COMPANY_ADDRESS=123 Business Street, City, State 12345
DEFAULT_COMPANY_DOMAIN=yourcompany.com
DEFAULT_COMPANY_INDUSTRY=Technology

# Admin User Configuration  
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
ADMIN_EMAIL=admin@yourcompany.com
ADMIN_FIRST_NAME=System
ADMIN_LAST_NAME=Administrator
ADMIN_PHONE=+1-555-0100

# Redis Configuration
# For Digital Ocean Managed Redis:
REDIS_URL=redis://username:password@host:port/0

# For local development:
# REDIS_URL=redis://localhost:6379/0

# Celery Configuration (Background Tasks)
CELERY_BROKER_URL=redis://username:password@host:port/0
CELERY_RESULT_BACKEND=redis://username:password@host:port/0

# Email Configuration (Optional - for notifications)
MAIL_SERVER=smtp.your-email-provider.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@yourdomain.com
MAIL_PASSWORD=your-email-password

# File Upload Configuration
UPLOAD_FOLDER=/app/uploads
MAX_CONTENT_LENGTH=524288000  # 500MB in bytes

# CORS Configuration (for frontend)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Digital Ocean Spaces (Optional - for file storage)
DO_SPACES_KEY=your-spaces-access-key
DO_SPACES_SECRET=your-spaces-secret-key
DO_SPACES_BUCKET=your-bucket-name
DO_SPACES_REGION=nyc3

# GPS and Location Services
ENABLE_GPS_TRACKING=true
GPS_ACCURACY_THRESHOLD=100  # meters

# Vigilance System Configuration
VIGILANCE_ALERT_EMAIL=alerts@yourdomain.com
VIGILANCE_CHECK_INTERVAL=300  # seconds (5 minutes)

# Business Intelligence Configuration
ENABLE_AI_INSIGHTS=true
AI_MODEL_ENDPOINT=https://api.openai.com/v1/completions
AI_API_KEY=your-openai-api-key

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Monitoring and Logging
LOG_LEVEL=INFO
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Multi-tenancy Configuration
ENABLE_MULTI_COMPANY=true
DEFAULT_COMPANY_CODE=MAIN

# Performance Configuration
CACHE_TIMEOUT=3600  # 1 hour
SESSION_TIMEOUT=86400  # 24 hours
MAX_WORKERS=4

# Security Configuration
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax
FORCE_HTTPS=true

# Feature Flags
ENABLE_DIGITAL_SIGNATURE=true
ENABLE_GPS_ATTENDANCE=true
ENABLE_VENDOR_PORTAL=true
ENABLE_CUSTOMER_PORTAL=true
ENABLE_MOBILE_APP=true
ENABLE_API_ACCESS=true

# Integration Configuration
WHATSAPP_API_KEY=your-whatsapp-business-api-key
FACEBOOK_APP_ID=your-facebook-app-id
LINKEDIN_CLIENT_ID=your-linkedin-client-id
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Payment Gateway Configuration (Optional)
STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret

# SMS Configuration (Optional)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Cloud Storage Configuration
CLOUD_STORAGE_PROVIDER=digitalocean  # digitalocean, aws, gcp, azure
CLOUD_STORAGE_BUCKET=your-storage-bucket
CLOUD_STORAGE_REGION=nyc3

# Analytics Configuration
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX-X
MIXPANEL_TOKEN=your-mixpanel-token

# Development Configuration (Only for development)
DEBUG=false
TESTING=false
WTF_CSRF_ENABLED=true

